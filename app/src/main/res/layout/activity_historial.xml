<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Historial">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="125dp"
        app:title="@string/history"
        app:titleTextAppearance="@style/toolbar"
        app:titleTextColor="@color/medium_grey"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <!-- RecyclerView con el historial de entrenamientos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_historial"
        app:layout_constraintVertical_bias="0.01">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>